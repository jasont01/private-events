<div class="row text-center justify-content-center">
  <div class="col-sm-3 my-5">
    <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), class: "form-signin") do |f| %>
      <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  label: false,
                  input_html: { autocomplete: "email", class: "form-control", placeholder: "Email address" } %>
      <%= f.input :password,
                  required: false,
                  label: false,
                  input_html: { autocomplete: "current-password", class: "form-control", placeholder: "Password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      <%= f.button :submit, "Sign in", class: "btn btn-lg btn-primary btn-block" %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>