<div class="row text-center justify-content-center">
  <div class="col-sm-3 my-5">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form-signin") do |f| %>
      <h1 class="h3 mb-3 font-weight-normal">Sign Up</h1>
      <%= f.error_notification %>
      <%= f.input :username,
                    required: true,
                    autofocus: true,
                    label: false,
                    input_html: { autocomplete: "email", class: "form-control", placeholder: "Username" }%>
      <%= f.input :name,
                    required: true,
                    label: false,
                    input_html: { autocomplete: "name", class: "form-control", placeholder: "Full Name" }%>
      <%= f.input :email,
                    required: true,
                    label: false,
                    input_html: { autocomplete: "email", class: "form-control", placeholder: "Email" }%>
      <%= f.input :password,
                    required: true,
                    label: false,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password", class: "form-control", placeholder: "Password" } %>
      <%= f.input :password_confirmation,
                    required: true,
                    label: false,
                    input_html: { autocomplete: "new-password", class: "form-control", placeholder: "Password Confirmation" } %>
      <%= f.button :submit, "Sign up", class: "btn btn-lg btn-primary btn-block" %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>