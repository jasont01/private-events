<div class="row">

  <div class="col m-5">
    <h1><%= @user.name %></h1>
    <p>Username: <%= @user.username %></p>
    <p>Email: <%= @user.email %></p>
    <p>Events Created: <%= @user.events.count %></p>
  </div>

  <div class="col m-5">
    <h2>Attended Events</h2>
    <ul class="list-group my-4">
      <% @user.attended_events.each do |event| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <h5><%= link_to event.event_name, event_path(event) %></h5>
          <p><%= event.location %></p>
          <p><%= event.date %></p>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="col-4 m-5">
    <h2>Upcomming Events</h2>

    <ul class="list-group my-4">
      <% @future_events.each do |event| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <h5><%= link_to event.event_name, event_path(event) %></h5>
          <p><%= event.location %></p>
          <p><%= event.date %></p>
        </li>
      <% end %>
    </ul>
    <h2>Past Events</h2>

    <ul class="list-group my-4">
      <% @past_events.each do |event| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <h5><%= link_to event.event_name, event_path(event) %></h5>
          <p><%= event.location %></p>
          <p><%= event.date %></p>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<div class="row">
  <div class="col">
  <%= link_to "<< Home", root_path %>
  </div>
</div>